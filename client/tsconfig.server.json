{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src"
  ],
  "paths": {
    "components": [
      "./src/components"
    ],
    "store": [
      "./src/store"
    ],
    "utils": [
      "./src/utils"
    ],
    "interfaces": [
      "./src/interfaces"
    ]
  }
}
