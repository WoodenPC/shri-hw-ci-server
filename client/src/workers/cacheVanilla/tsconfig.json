{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "amd",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "composite": true,
    "lib": ["esnext", "webworker"],
    "outDir": "../../../build",
  },
  "include": ["."]
}